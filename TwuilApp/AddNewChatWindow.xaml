<Window x:Class="TwuilApp.AddNewChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwuilApp"
        mc:Ignorable="d"
        Title="AddNewChatWindow" Height="Auto" Width="500"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource LoginWindowStyle}">
    
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Style="{StaticResource LabelControlStyle}">USER:</TextBlock>

        <TextBox Grid.Row="1" Style="{StaticResource InputControlStyle}" Name="UserTextBox"></TextBox>

        <Button Grid.Row="2" Style="{StaticResource ButtonSignStyle}" Name="AddNewChatButton">ADD NEW CHAT</Button>
    </Grid>
</Window>
